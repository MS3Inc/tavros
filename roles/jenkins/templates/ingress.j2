apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: jenkins
  namespace: jenkins
  annotations:
    cert-manager.io/cluster-issuer: troubadour
    kubernetes.io/ingress.class: {{ kong.default_ingress_class }}
    konghq.com/strip-path: 'true'
    konghq.com/protocols: https
    konghq.com/https-redirect-status-code: '302'
spec:
  rules:
  - host: ci.{{ cluster_name}}.{{ cluster_domain }}
    http:
      paths:
      - path: /
        backend:
          serviceName: jenkins-operator-http-troubadour
          servicePort: 8080
  tls:
  - hosts:
    - ci.{{ cluster_name}}.{{ cluster_domain }}
    secretName: ci-ingress-cert
