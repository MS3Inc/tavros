apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: troubadour
  namespace: cert-manager
spec:
  acme:
    email: ops@{{ cluster_name }}.{{ cluster_domain }}.com
    server: https://acme-v02.api.letsencrypt.org/directory
    preferredChain: "ISRG Root X1"
    privateKeySecretRef:
      name: troubadour-issuer-account-key
    solvers:
    - selector: {}
      http01:
        ingress:
          # todo: needs to be a variable
          class: prod-kong
