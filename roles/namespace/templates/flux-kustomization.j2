apiVersion: kustomize.toolkit.fluxcd.io/v1beta1
kind: Kustomization
metadata:
  name: {{ item.ns_name }}
  namespace: flux-system
spec:
  interval: 5m0s
  path: ./{{ cluster_domain }}/{{ item.ns_name }}/
  sourceRef:
    kind: GitRepository
    name: flux-system
  validation: client
  prune: true
  timeout: 5m0s