apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: {{ kong_name }}
  namespace: kong
spec:
  targetNamespace: kong
  interval: 10m
  chart:
    spec:
      # https://github.com/Kong/charts/tree/main/charts/kong
      chart: kong
      version: 1.11.0
      sourceRef:
        kind: HelmRepository
        name: kong
        namespace: flux-system
  install:
    remediation:
      retries: 5
  upgrade:
    remediation:
      retries: 5
  values:
    image:
      tag: '2.2'
    env:
      database: postgres
      pg_host: troubadour-postgresql.postgresql
      pg_port: '5432'
      pg_database:
        valueFrom:
          secretKeyRef:
            name: {{ kong_name }}-config-secret
            key: pg_database
      pg_user:
        valueFrom:
          secretKeyRef:
            name: {{ kong_name }}-config-secret
            key: pg_user
      pg_password:
        valueFrom:
          secretKeyRef:
            name: {{ kong_name }}-config-secret
            key: pg_password
    ingressController:
      installCRDs: false
      env:
        # see https://github.com/Kong/charts/issues/224
        kong_admin_tls_skip_verify: 'true'
{%  if mesh_name is defined %}
    podAnnotations:
      kuma.io/sidecar-injection: enabled
      kuma.io/gateway: enabled
      kuma.io/mesh: {{ mesh_name }}
{% endif  %}
